---
interface Props {
  dark?: boolean
}

const { dark } = Astro.props
---

{
  dark ? (
    <small class='dark'>
      <slot />
    </small>
  ) : (
    <small>
      <slot />
    </small>
  )
}

<style>
  small {
    color: var(--text-color);
    background-color: var(--bg-light);
    border-radius: var(--border-radius);
    font-weight: 600;
    font-family: var(--font-mono);
    padding: 0.35em 0.5em;
    line-height: 1;
  }

  .dark {
    color: var(--bg-color);
    background-color: var(--bg-dark);
  }
</style>
