---
import Layout from '../layouts/Layout.astro'

import {SITE_TITLE,SITE_DESCRIPTION} from '@/const'

import About from '@/sections/About.astro'
import Education from '@/sections/Education.astro'
import Experience from '@/sections/Experience.astro'
import Hero from '@/sections/Hero.astro'
import Projects from '@/sections/Projects.astro'
import Skills from '@/sections/Skills.astro'
import KeyboardManager from '@/sections/KeyboardManager.astro'
---

<Layout
  title={SITE_TITLE}
  description={SITE_DESCRIPTION}
>
  <header>
    <Hero />
  </header>
  <main>
    <About />
    <Experience />
    <Education />
    <Projects />
    <Skills />
  </main>
  <footer>
    <KeyboardManager />
  </footer>
</Layout>
