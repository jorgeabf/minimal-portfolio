---
import Section from '@/components/Section.astro'
import LocationIcon from '@/icons/LocationIcon.astro'
import MailIcon from '@/icons/MailIcon.astro'
import PhoneIcon from '@/icons/PhoneIcon.astro'
import GitHub from '@/icons/GithubIcon.astro'
import LinkedIn from '@/icons/LinkedinIcon.astro'
import { basics } from '@cv'
import { Image } from 'astro:assets'

const { name, label, image, location, profiles, phone, email } = basics

const { city, region } = location

const SOCIAL_ICONS: Record<string, any> = {
  GitHub,
  LinkedIn
}

const linkedInInfo = profiles.find(({ network }) => network === 'LinkedIn')
const linkedInUrl = linkedInInfo?.url
const githubInfo = profiles.find(({ network }) => network === 'GitHub')
const githubUrl = githubInfo?.url
---

<Section>
  <div class='header'>
    <div class='info'>
      <h1>{name}</h1>
      <p>{label}</p>
      <span
        class='location flex'
        title='Localidad y Provincia'
      >
        <LocationIcon
          width='32px'
          height='32px'
          class='social-icon'
        />{city}, {region}
      </span>
      <footer class='flex'>
        <ul class='print'>
          {
            email && (
              <li>
                <a
                  href={`mailto:${email}`}
                  target='_blank'
                  rel='noopener noreferrer'
                  title={`Enviar un Email a ${name} a la dirección ${email}`}
                >
                  {email}
                </a>
              </li>
            )
          }
          {
            phone && (
              <li>
                <a
                  href={`tel:${phone}`}
                  title={`Llamar a ${name} al número ${phone}`}
                  target='_blank'
                  rel='noopener noreferrer'
                >
                  {phone}
                </a>
              </li>
            )
          }
          {
            linkedInUrl && (
              <li>
                <a
                  href={linkedInUrl}
                  title={`Visitar el perfil de ${name} en LinkedIn`}
                  target='_blank'
                  rel='noopener noreferrer'
                >
                  {linkedInUrl}
                </a>
              </li>
            )
          }
          {
            githubUrl && (
              <li>
                <a
                  href={githubUrl}
                  title={`Visitar el perfil de ${name} en GitHub`}
                  target='_blank'
                  rel='noopener noreferrer'
                >
                  {githubUrl}
                </a>
              </li>
            )
          }
        </ul>
        {
          email && (
            <a
              class='social-link'
              href={`mailto:${email}`}
              target='_blank'
              rel='noopener noreferrer'
              title={`Enviar un Email a ${name} a la dirección ${email}`}
            >
              <MailIcon
                width='24px'
                height='24px'
                class='social-icon'
                title={`Enviar un Email a ${name} a la dirección ${email}`}
              />
            </a>
          )
        }
        {
          phone && (
            <a
              class='social-link'
              href={`tel:${phone}`}
              title={`Llamar a ${name} al número ${phone}`}
              target='_blank'
              rel='noopener noreferrer'
            >
              <PhoneIcon
                width='24px'
                height='24px'
                class='social-icon'
              />
            </a>
          )
        }
        {
          profiles.map(({ network, url }) => {
            const Icon = SOCIAL_ICONS[network]
            return (
              <a
                class='social-link'
                href={url}
                title={`Visitar el perfil de ${name} en ${network}`}
                target='_blank'
                rel='noopener noreferrer'
              >
                <Icon
                  width='24px'
                  height='24px'
                />
              </a>
            )
          })
        }
      </footer>
    </div>
    <Image
      width='100'
      height='100'
      src={image}
      alt={`Foto de ${name}`}
      class='avatar'
    />
  </div>
</Section>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: start;
    gap: 1.5rem;
  }

  .avatar {
    border-radius: var(--border-radius);
  }
  .info {
    flex-basis: fit-content;
  }
  h1 {
    line-height: 0.6;
  }

  p {
    margin-bottom: 0.75rem;
    font-size: 1.2rem;
    line-height: 1.2;
    text-wrap: balance;
    color: hsl(0, 0%, 10%);
  }

  .location {
    margin-bottom: 1rem;
  }

  footer a {
    padding: 0.5em;
    background-color: var(--bg-light);
    border-radius: var(--border-radius);
    color: var(--text-color);
    transition: color 0.2s;
    &:hover {
      color: hsl(0, 0%, 0%);
    }
  }

  .print {
    display: none;
  }

  @media print {
    .print {
      display: block;
    }
    .social-link,
    .location {
      display: none;
    }
  }
</style>
