---
import Wrapper from '@/components/Wrapper.astro'

interface Props {
  title: string
  description: string
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site)

const { title, description } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='canonical'
      href={canonicalURL}
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>{title}</title>
    <meta
      name='description'
      content={description}
    />
    <link
      rel='sitemap'
      href='/sitemap-index.xml'
    />
  </head>
  <body>
    <Wrapper>
      <slot />
    </Wrapper>
  </body>
</html>

<style is:global>
:root {
  --h1-color: hsl(0, 0%, 0%);
  --h2-color: hsl(0, 0%, 10%);
  --h3-color: hsl(0, 0%, 20%);
  --h4-color: hsl(0, 0%, 30%);
  --text-color: hsl(0, 0%, 40%);

  --bg-color: hsl(0, 0%, 100%);
  --bg-dark: hsl(0, 0%, 10%);
  --bg-light: hsl(0, 0%, 95%);

  --font-mono: Menlo, Monaco, Lucida Console, Courier New, monospace;
  --font-title: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;

  --border-radius: 0.4em;
}

#root, #__next {
    isolation: isolate;
  }


  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    line-height: 1.5;
    -webkit-font-smoothing: antialiased;
    font-family: var(--font-mono),
    font-size: 16px;
    letter-spacing: -0.025em;
    color:var(--text-color);
    background-color: var(--bg-color);
  }

  figure,
  ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  img,
  svg {
    display: block;
    max-width: 100%;
  }
  input,
  button,
  textarea,
  select {
    font: inherit;
  }
  p,
  h1,
  h2,
  h3,
  h4 {
    overflow-wrap: break-word;
  }
  
  [title] {
    cursor: help;
  }

  h1,
  h2,
  h3,
  h4 {
    margin-top: 0;
    text-wrap: balance;
    font-family: var(--font-title);
  }

  h1 {
    font-size: 2.5rem;
    color: var(--h1-color);
  }

  h2 {
    margin-bottom: 0.75rem;
    font-size: 1.75rem;
    color: var(--h2-color)
  }
  h3 {
    margin-bottom: 0.5rem;
    font-size: 1.4rem;
    color: var(--h3-color)
  }

  h4 {
    font-size: 1.1rem;
    color: var(--h4-color)
  }
  p {
    margin-top: 0;
    text-wrap: pretty;
  }
</style>
